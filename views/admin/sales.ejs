<%- include("../../views/partials/admin/header") %>
<style>
        .filter-section {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        .metrics-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }
        .metric-card {
            flex: 1;
            min-width: 200px;
            padding: 15px;
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 8px;
            text-align: center;
        }
        .metric-card h5 {
            margin: 10px 0;
        }
        .report-container {
        margin: 20px auto;
        max-width: 1200px;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        @media print {
         .report-container {
            margin: 0;
            box-shadow: none;
          }
        }

</style>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.4.0/jspdf.umd.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
<div class="d-flex justify-content-end mb-4">
  <form method="GET" action="/admin/sales" onsubmit="console.log('Filter:', this.filter.value)">
      <select name="filter" class="form-select w-auto me-2">
        <option value="" disabled selected>Select Filter</option>
        <option value="daily" <%= filter === 'daily' ? 'selected' : '' %>>Daily</option>
        <option value="weekly" <%= filter === 'weekly' ? 'selected' : '' %>>Weekly</option>
        <option value="monthly" <%= filter === 'monthly' ? 'selected' : '' %>>Monthly</option>
        <option value="yearly" <%= filter === 'yearly' ? 'selected' : '' %>>Yearly</option>
      </select>
      <button type="submit" class="btn btn-primary">Filter</button>
    </form>
</div>
<div class="container my-4" id="salesReport">
    <h1 class="text-center">Sales Report</h1>

    <!-- Summary Section -->
    <div class="row g-3">
        <div class="col-md-6">
          <div class="card p-3">
            <h5>Summary</h5>
            <p>Total Orders: <%= totalOrders %></p>
            <p>Total Revenue: ₹<%= totalRevenue.toFixed(2) %></p>
            <p>Total Discounts: ₹<%= totalDiscount.toFixed(2) %></p>
            <p>Revenue After Discount: ₹<%= revenueAfterDiscount.toFixed(2) %></p>
          </div>
        </div>
        <div class="col-md-6">
          <div class="card p-3">
            <h5>Order Status</h5>
            <p>Pending: <%= statusCounts.Pending || 0 %></p>
            <p>Delivered: <%= statusCounts.Delivered || 0 %></p>
            <p>Cancelled: <%= statusCounts.Cancelled || 0 %></p>
          </div>
        </div>
      </div>

    <!-- Payment Method Usage -->
    <div class="row g-3 mt-4">
      <div class="col-md-6">
        <div class="card p-3">
          <h5>Payment Methods</h5>
          <% Object.entries(paymentMethods).forEach(([method, count]) => { %>
            <p><%= method %>: <%= count %></p>
          <% }) %>
        </div>
      </div>
    </div>
  
    <!-- Order Table -->
    <div class="card mt-4 p-3">
      <h5>Order Details</h5>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Order ID</th>
            <th>Date</th>
            <th>Customer</th>
            <th>Payment Method</th>
            <th>Amount</th>
          </tr>
        </thead>
        <tbody>
            <% orders.forEach(order => { %>
              <tr>
                <td><%= order.orderId %></td>
                <td><%= moment(order.createdOn).format('DD/MM/YYYY') %></td>
                <td><%= order.userId?.name || 'N/A' %></td>
                <td><%= order.paymentMethod || 'N/A' %></td>
                <td>₹<%= order.totalPrice.toFixed(2) %></td>
              </tr>
            <% }) %>
          </tbody>
      </table>
    </div>
  </div>
  <button id="downloadPdf" class="btn btn-primary ms-2">Download PDF</button>
  

  <script>

    document.getElementById('downloadPdf').addEventListener('click', async function () {
      try {
        const { jsPDF } = window.jspdf;
        const pdf = new jsPDF({
          orientation: 'portrait',
          unit: 'px',
          format: 'a4', 
        });
  
        const salesReportElement = document.getElementById('salesReport');
        const canvas = await html2canvas(salesReportElement, {
          scale: 2, 
        });

        const imgData = canvas.toDataURL('image/png');
        const pdfWidth = pdf.internal.pageSize.getWidth();
        const pdfHeight = (canvas.height * pdfWidth) / canvas.width;
        pdf.addImage(imgData, 'PNG', 0, 0, pdfWidth, pdfHeight);
        pdf.save('Sales_Report.pdf');

      } catch (error) {
        console.error('Error generating PDF:', error);
        alert('An error occurred while generating the PDF. Please try again.');
      }
    });

  </script>
  
  
<%- include("../../views/partials/admin/footer") %>

<%- include("../../views/partials/user/header") %>

<style>
/* General Wishlist Section Styling */
.wishlist-products {
    display: flex;
    flex-direction: column;
    gap: 20px; /* Space between products */
    margin-top: 20px;
}

.wishlist-item {
    display: flex;
    align-items: flex-start;
    gap: 20px;
    padding: 15px;
    border: 1px solid #ddd;
    border-radius: 5px;
    background-color: #f9f9f9;
}

.wishlist-item-image img {
    width: 80px; /* Small product image */
    height: 80px;
    object-fit: cover;
    border-radius: 5px;
}

.wishlist-item-details {
    flex-grow: 1;
}

.wishlist-item-details h3 {
    margin: 0 0 5px;
    font-size: 18px;
    color: #333;
}

.wishlist-item-details p {
    margin: 5px 0;
    font-size: 14px;
    color: #666;
}

.actions {
    display: flex;
    justify-content: flex-end; /* Align buttons at the end */
    gap: 10px;
    margin-top: 7px; /* Add some space above the buttons */
}

.actions button {
    padding: 5px 15px;
    font-size: 14px;
    cursor: pointer;
    border: none;
    border-radius: 4px;
    background-color: black; 
    color: white; /* White text for contrast */
    transition: background-color 0.3s ease;
}

.actions button:hover {
    background-color: #333; 
}

/* Continue Shopping Button */
.continue-btn {
    display: inline-block;
    margin-top: 20px;
    background-color: black;
    color: white;
    padding: 10px 15px;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s ease;
}


.continue-btn:hover {
    background-color: #333;
}
</style>

<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>My Wishlist</h4>
                    <div class="breadcrumb__links">
                        <a href="/">Home</a>
                        <a href="/shop">Shop</a>
                        <span>Wishlist</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="wishlist-section spad">
    <div class="container">
        <h3>YOUR WISHLIST</h3>
        <br>
        <% if (wishlistProducts.length === 0) { %>
            <p class="empty-message">Your wishlist is currently empty.</p>
            <a href="/shop" class="continue-btn">Continue Shopping</a>
        <% } else { %>
            <div class="wishlist-products">
                <% wishlistProducts.forEach(product => { %>
                    <div class="wishlist-item">
                        <div class="wishlist-item-image">
                            <img src="/uploads/product-images/<%= product.image ? product.image : 'default-image.jpg' %>" 
                                 alt="<%= product.name %>">
                        </div>
                        <div class="wishlist-item-details">
                            <h3><%= product.name %></h3>
                            <p><%= product.description %></p>
                            <p>Price: â‚¹<%= product.price.toFixed(2) %></p>
                            <div class="actions">
                              
                               
                                <form class="addToCartForm" data-product-id="<%= product._id %>" style="display: inline;">
                                    <button type="submit" class="add-to-cart-btn">Add to Cart</button>
                                </form>
                                <td class="cart__close">
                                    <a href="/wishlist/remove/<%= product._id %>"><i class="fa fa-close"></i></a>
                                </td>
                                
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>
</section>

<%- include("../../views/partials/user/footer") %>

<script>
   document.addEventListener('DOMContentLoaded', function () {
    
    document.querySelectorAll('.addToCartForm').forEach(form => {
        form.addEventListener('submit', async function (event) {
            event.preventDefault(); 
            
            const productId = this.dataset.productId; 
            const quantityInput = this.querySelector('input[name="quantity"]'); 
            const quantity = quantityInput ? quantityInput.value : 1;

            try {
                const response = await fetch('/addToCart', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ productId, quantity })
                });

                if (response.ok) {
                    const data = await response.json();
                    if (data.message === 'Product added successfully') {
                        Swal.fire({
                            title: 'Product Added to Cart!',
                            text: 'Would you like to go to your cart or continue shopping?',
                            icon: 'success',
                            showCancelButton: true,
                            confirmButtonText: 'Go to Cart',
                            cancelButtonText: 'Continue Shopping'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                window.location.href = '/cart';
                            }
                        });
                    } else {
                        Swal.fire('Error', 'Could not add the product to the cart. Please try again.', 'error');
                    }
                } else {
                    const error = await response.json();
                    Swal.fire('Error', error.message || 'Unexpected error occurred.', 'error');
                }
            } catch (err) {
                console.error('Error adding to cart:', err);
                Swal.fire('Error', 'Unable to add to cart. Please try again later.', 'error');
            }
        });
    });
});

</script>

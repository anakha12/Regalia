<%- include("../../views/partials/user/header") %>

<div class="container mt-5">
    <h2 class="text-center mb-4">Edit Profile</h2>
    
    <form action="/edit-profile" method="POST" class="profile-form p-4 border rounded">
        <!-- Name Field -->
        <div class="form-group mb-3">
            <label for="name" class="form-label">Name:</label>
            <input type="text" id="name" name="name" class="form-control" value="<%= user.name %>" required style="font-size: 14px; padding: 6px;">
        </div>

         <!-- Phone Number Field -->
         <div class="form-group mb-3">
            <label for="phone" class="form-label">Phone Number:</label>
            <input type="text" id="phone" name="phone" class="form-control" value="<%= user.phone %>" style="font-size: 14px; padding: 6px;">
        </div>
        
        <!-- Email Field -->
        <div class="form-group mb-3">
            <label for="email" class="form-label">Email:</label>
            <div class="d-flex">
                <input type="email" id="email" name="email" class="form-control" value="<%= user.email %>" style="font-size: 14px; padding: 6px;">
                <button type="button" onclick="location.href='/profile/change-email'" style="font-size: 12px; padding: 6px 10px; margin-left: 10px;" class="btn btn-secondary">Change Email</button>
            </div>
        </div>
        
       

        <!-- Password Change Button in Same Line -->
        <div class="form-group mb-3">
            <label for="password" class="form-label">Password:</label>
           
               
                <button type="button" onclick="location.href='/profile/change-password'" style="font-size: 12px; padding: 6px 10px; margin-left: 10px;" class="btn btn-secondary">Change Password</button>
            
        </div>
        
        <!-- Submit Button -->
        <div class="form-group d-flex justify-content-between mt-4">
            <button type="submit" style="font-size: 12px; padding: 6px 12px;" class="btn btn-primary">Save Changes</button>
            <a href="/profile" style="font-size: 12px; padding: 6px 12px;" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>

<%- include("../../views/partials/user/footer") %>

<%- include("../../views/partials/user/header") %>
<style>
  /* General Adjustments */
  body {
    font-family: 'Arial', sans-serif;
    background-color: #f9f9f9;
    color: #333;
    margin: 0;
    padding: 0;
  }
  
  /* Main Container and Breadcrumb Styles */
  .main {
    padding: 40px 0;
  }
  .page-header.breadcrumb-wrap {
    background-color: #f5f5f5;
    padding: 20px 0;
  }
  .breadcrumb {
    display: flex;
    align-items: center;
    font-size: 16px;
    color: #333;
  }
  .breadcrumb a {
    color: #007bff;
    text-decoration: none;
    margin: 0 5px;
    position: relative;
  }
  .breadcrumb a:hover {
    color: #0056b3;
  }
  .breadcrumb span {
    margin: 0 5px;
    color: #666;
  }
  .breadcrumb a::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    right: 0;
    height: 2px;
    background-color: #007bff;
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s ease;
  }
  .breadcrumb a:hover::after {
    transform: scaleX(1);
  }
  
  /* Card Styles */
  .card {
    
    background-color: #fff;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    margin-bottom: 20px;
  }
  .card-header {
    background-color: #121313;
    color: #fff;
    font-size: 18px;
    padding: 10px 15px;
    
  }
  .card-green {
    background-color: #fff;
  }
  
  /* Button Styles */
  .btn-success {
    background-color: #0f0f0f;
    border-color: #111111;
    color: #fff;
  }
  .btn-success:hover {
    background-color: #080808;
    border-color: #0a0a0a;
  }
  .btn-small {
  font-size: 14px;
  padding: 5px 10px;
  background-color: transparent;
  color: #000;
  text-decoration: none;
  font-weight: bold;
  display: inline-block;

  transition: color 0.3s ease, border-color 0.3s ease;
}

.btn-small:hover {
  color: #333;
  border-color: #000;
}

  
  /* Dashboard Menu */
  .dashboard-menu {
    background-color: #fff;
    
    padding: 15px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  }
  .dashboard-menu .nav-link {
    font-weight: bold;
    color: #111111;
    transition: color 0.3s ease, box-shadow 0.3s ease;
  }
  .dashboard-menu .nav-link:hover {
    color: #171818;
    box-shadow: 0 4px 15px rgba(15, 15, 15, 0.5);
  }
  
  /* Address Styles */
  .add-address-container {
    margin-top: 20px;
    text-align: center;
  }
  .add-address-container .btn {
    background-color: #010407;
    color: #fff;
    border: none;
    transition: background-color 0.3s ease;
  }
  .add-address-container .btn:hover {
    background-color: #090a0a;
  }
  
  /* Responsive Adjustments */
  @media (max-width: 768px) {
    .dashboard-menu {
      padding: 10px;
    }
    .card {
      margin-bottom: 15px;
    }
    .breadcrumb {
      font-size: 14px;
    }
    .btn-small {
      padding: 5px 8px;
      font-size: 12px;
    }
  }
  </style>
  


<main class="main">
 <div class="page-header breadcrumb-wrap mb-3">
   <div class="container">
     <div class="breadcrumb">
       <a href="#" rel="nofollow">Home</a>
       <span></span> Profile <span></span> Account
     </div>
   </div>
 </div>
  <section class="pt-10 pb-10">
   <div class="container">
     <div class="row">
       <div class="col-lg-10 m-auto">

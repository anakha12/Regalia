  <!-- Add the zoom functionality JavaScript at the end of the body -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const zoomImage = document.querySelector('.zoom-img');  // The image to be zoomed
        const zoomContainer = document.querySelector('.product__details__pic__item');  // The container for the image

        zoomContainer.addEventListener('mousemove', (e) => {
            const containerRect = zoomContainer.getBoundingClientRect();
            const mouseX = e.clientX - containerRect.left;  // Mouse X position inside the container
            const mouseY = e.clientY - containerRect.top;   // Mouse Y position inside the container
            const zoomWidth = zoomImage.offsetWidth;
            const zoomHeight = zoomImage.offsetHeight;

            // Calculate the percentage position of the mouse inside the image
            const posX = (mouseX / containerRect.width) * 100;
            const posY = (mouseY / containerRect.height) * 100;

            // Apply the zoom effect
            zoomImage.style.transformOrigin = `${posX}% ${posY}%`;  // Change the origin based on mouse position
            zoomImage.style.transform = `scale(2)`;  // Zoom in by a factor of 2 (adjust as needed)
        });

        // Reset the zoom effect when the mouse leaves the image container
        zoomContainer.addEventListener('mouseleave', () => {
            zoomImage.style.transform = 'scale(1)';  // Reset zoom scale
        });
    });
    document.addEventListener('DOMContentLoaded', function () {
    const addToCartForm = document.querySelector('#add-to-cart-form');
    console.log(addToCartForm);  // Check if form is found
    
    if (addToCartForm) {
        addToCartForm.addEventListener('submit', async function (e) {
            e.preventDefault();  // Prevent form from submitting traditionally
            
            const productId = this.dataset.productId;
            const quantityInput = this.querySelector('input[name="quantity"]');

            if (quantityInput) {
                const quantity = quantityInput.value;
                console.log("Form submitted. Product ID:", productId, "Quantity:", quantity);

                try {
                    const response = await fetch('/addToCart', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ productId, quantity })
                    });

                    if (response.ok) {
                        Swal.fire({
                            title: 'Product Added to Cart!',
                            text: 'The product has been successfully added to your cart.',
                            icon: 'success',
                            showCancelButton: true,
                            confirmButtonText: 'Go to Cart',
                            cancelButtonText: 'Continue Shopping'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                window.location.href = '/cart';
                            }
                        });
                    } else {
                        const errorText = await response.text();
                        Swal.fire({
                            title: 'Error',
                            text: errorText,
                            icon: 'error',
                            confirmButtonText: 'OK'
                        });
                    }
                } catch (error) {
                    console.error('Error adding to cart:', error);
                    Swal.fire({
                        title: 'Failed to Add to Cart',
                        text: 'There was an issue adding the product to your cart. Please try again later.',
                        icon: 'error',
                        confirmButtonText: 'OK'
                    });
                }
            } else {
                console.warn("Quantity input not found");
            }
        });
    } else {
        console.warn("No form with ID '#add-to-cart-form' found.");
    }
});



</script>
